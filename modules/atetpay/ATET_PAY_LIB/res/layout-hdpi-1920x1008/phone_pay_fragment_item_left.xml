<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/phone_pay_lin_root_left"
    android:orientation="vertical" >
 <!-- android:padding="@dimen/phone_pay_fragment_padding" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/phone_pay_fragment_padding"
        android:paddingTop="@dimen/phone_pay_fragment_padding"
        android:paddingBottom="16dp"
        android:orientation="horizontal" >
 
       <ImageView
            android:id="@+id/phone_pay_fragment_item_iv_left_qrcode"
            android:layout_width="@dimen/phone_pay_fragment_qrcode_w_h"
            android:layout_height="@dimen/phone_pay_fragment_qrcode_w_h"
            android:src="@drawable/icon_atet"
            />
       <!--  android:drawableTop="@drawable/phone_pay_fragment_item_tv_left_bg" -->
        <TextView
            android:id="@+id/phone_pay_fragment_item_tv_left_icon_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:text="@string/phone_pay_fragment_item_tv_left_icon_up_tip"
            android:textSize="@dimen/payfont7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|left"
        android:layout_marginLeft="@dimen/phone_pay_fragment_margin_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phone_pay_fragment_item_tv_left_tip_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_pay_fragment_item_tv_left_tip_up_tip"
            android:textSize="@dimen/payfont4" />

        <TextView
            android:id="@+id/phone_pay_fragment_item_tv_left_tip_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/phone_pay_fragment_item_tv_left_icon_down_tip"
            android:textSize="@dimen/payfont9" />
    </LinearLayout>

</LinearLayout>