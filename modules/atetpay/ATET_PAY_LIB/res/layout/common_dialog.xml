<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bind_bank_card_dialog_bg"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="@dimen/common_dialog_padding_left"
    android:paddingRight="@dimen/common_dialog_padding_right"
    android:paddingBottom="@dimen/common_dialog_padding_bottom"
    android:paddingTop="@dimen/common_dialog_padding_top"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/phone_pay_fragment_iv_title_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/common_dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确定要退出吗？"
            android:textColor="@color/main_activity_rbtn_text_color"
            android:textSize="@dimen/payfont1" />
 </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/common_dialog_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bank_pay_fragment_btn_selector"
            android:text="@string/bind_bank_card_dialog_btn_confirm"
            android:textColor="@color/main_activity_rbtn_text_color"
            android:textSize="@dimen/payfont3" />

        <Button
            android:id="@+id/common_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/phone_pay_fragment_margin_left"
            android:background="@drawable/bank_pay_fragment_btn_selector"
            android:text="@string/bind_bank_card_dialog_btn_cancle"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/main_activity_rbtn_text_color"
            android:textSize="@dimen/payfont3" />
    </LinearLayout>

</LinearLayout>
