<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="@dimen/account_activity_login_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/account_shadow_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/account_title_bg"
            android:gravity="center"
            android:padding="@dimen/account_activity_comont_title_or_bottom_padding"
            android:text="修改资料"
            android:textSize="@dimen/payfont6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_content_bg"
            android:orientation="vertical"
            android:padding="@dimen/account_activity_comont_content_padding" >
<!-- 
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名:"
                    android:drawableLeft="@drawable/account_start_icon"
                    android:textSize="@dimen/payfont9" />

                <EditText
                    android:id="@+id/account_info_update_et_username"
                    style="@style/comon_et_style"
                    android:hint="@string/setting_account_register_et_tip_username" />
            </LinearLayout>
  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧密码:"
                     android:drawableLeft="@drawable/account_start_icon"
                    android:textSize="@dimen/payfont9" />

                <EditText
                    android:id="@+id/account_info_update_et_old_password"
                    style="@style/comon_et_style"
                    android:hint="@string/setting_account_register_et_tip_pw" />
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/account_activity_login_lin_margin_top"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:drawableLeft="@drawable/account_start_icon"
                    android:text="新密码:"
                    android:textSize="@dimen/payfont9" />

                <EditText
                    android:id="@+id/account_info_update_et_new_passs_word"
                    style="@style/comon_et_style"
                    android:hint="@string/setting_account_register_et_tip_new_pw" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/account_activity_login_lin_margin_top"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:drawableLeft="@drawable/account_start_icon"
                    android:text="确认密码:"
                    android:textSize="@dimen/payfont9" />

                <EditText
                    android:id="@+id/account_info_update_et_repass_word"
                    style="@style/comon_et_style"
                    android:hint="@string/setting_account_register_et_tip_re_new_pw" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/account_activity_login_lin_margin_top"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:drawableLeft="@drawable/account_start_icon"
                    android:text="邮箱:"
                    android:textSize="@dimen/payfont9" />

                <EditText
                    android:id="@+id/account_info_update_et_email"
                    style="@style/comon_et_style"
                    android:hint="@string/setting_account_register_et_tip_email" />
            </LinearLayout>
              <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:drawableLeft="@drawable/account_start_icon"
                     android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:text="为必填项"
                    android:textSize="@dimen/payfont9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/account_bottom_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/account_activity_comont_title_or_bottom_padding" >

            <Button
                android:id="@+id/account_info_update_btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/account_activity_login_comont_btn_h"
                android:background="@drawable/account_btn_selector"
                android:paddingLeft="@dimen/account_activity_login_comont_btn_pading_right_or_left"
                android:paddingRight="@dimen/account_activity_login_comont_btn_pading_right_or_left"
                android:text="确认"
                android:textSize="@dimen/payfont9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
