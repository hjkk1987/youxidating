<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/square_backgroud" >

        <Button
            android:id="@+id/imageView1"
            android:layout_width="138dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/square_six" />

        <Button
            android:id="@+id/imgStrategy"
            android:layout_width="302dp"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_square_one_sel" />

        <Button
            android:id="@+id/button2"
            android:layout_width="112dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgRelaxPart"
            android:layout_marginLeft="14dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_fantastic_story"
            android:textColor="@color/white"
            android:textSize="@dimen/font8" />

        <Button
            android:id="@+id/button1"
            android:layout_width="112dp"
            android:layout_height="68dp"
            android:layout_alignBottom="@+id/imgHotTopic"
            android:layout_alignParentRight="true"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_notice_board"
            android:textColor="@color/white"
            android:textSize="@dimen/font8" />

        <Button
            android:id="@+id/imgRelaxPart"
            android:layout_width="145dp"
            android:layout_height="310dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imgSquarePart"
            android:layout_marginTop="31dp"
            android:background="@drawable/btn_square_three_sel" />

        <Button
            android:id="@+id/button3"
            android:layout_width="112dp"
            android:layout_height="68dp"
            android:layout_alignBottom="@+id/imgSquarePart"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="62dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_fashion_philosopher"
            android:textColor="@color/white"
            android:textSize="@dimen/font8" />

        <Button
            android:id="@+id/imgHotTopic"
            android:layout_width="290dp"
            android:layout_height="285dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/btn_square_four_sel" />

        <Button
            android:id="@+id/imgSquarePart"
            android:layout_width="164dp"
            android:layout_height="240dp"
            android:layout_alignLeft="@+id/imgHotTopic"
            android:layout_below="@+id/imgStrategy"
            android:layout_marginLeft="57dp"
            android:background="@drawable/btn_square_two_sel" />

        <Button
            android:id="@+id/button4"
            android:layout_width="112dp"
            android:layout_height="68dp"
            android:layout_alignRight="@+id/imgRelaxPart"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="47dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_game_attackstrategy"
            android:textColor="@color/white"
            android:textSize="@dimen/font8" />

    </RelativeLayout>

</LinearLayout>