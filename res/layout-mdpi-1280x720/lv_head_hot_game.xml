<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="230dp" >

        <com.sxhl.market.view.costom.ViewPagerInListview
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="220dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/hot_game_head_dot_contain_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:gravity="center" >

                <View
                    android:id="@+id/v_dot0"
                    style="@style/dot_style"
                    android:background="@drawable/dot_focused" />

                <View
                    android:id="@+id/v_dot1"
                    style="@style/dot_style" />

                <View
                    android:id="@+id/v_dot2"
                    style="@style/dot_style" />

                <View
                    android:id="@+id/v_dot3"
                    style="@style/dot_style" />

                <View
                    android:id="@+id/v_dot4"
                    style="@style/dot_style" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
	 <RadioGroup
        android:id="@+id/game_radioGroup_detailComm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/game_radioButton_gameDetail"
            style="@style/game_zone_btn_style"
            android:background="@drawable/btn_game_zone_left_selector"
            android:checked="true"
            android:text="@string/game_handle" />

        <RadioButton
            android:id="@+id/game_radioButton_gameComm"
            style="@style/game_zone_btn_style"
            android:background="@drawable/btn_game_zone_right_selector"
            android:text="@string/game_normal" />
    </RadioGroup>
