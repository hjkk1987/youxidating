<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:gravity="center_vertical"
     >

    <ImageView
        android:id="@+id/lv_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/minphoto"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/topicname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/color4"
                android:textSize="@dimen/font2" 
                android:layout_alignParentLeft="true"
                >
            </TextView>
            
             <TextView
                android:id="@+id/topiccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/color5"
            	android:textSize="@dimen/font2"
            	android:layout_toRightOf="@id/topicname"
                >
            </TextView>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/topic_resume"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1.0"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:textColor="@color/color5"
            android:textSize="@dimen/font3" />

        <TextView
            android:id="@+id/topic_read_count"
            style="@style/list_item_three_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

</LinearLayout>