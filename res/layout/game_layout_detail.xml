<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutGameDetailScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:id="@+id/layoutGameDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     	<RelativeLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="50dp"
        	android:gravity="center_vertical"
         	>
          <TextView
        	android:id="@+id/game_tv_detail_gameDetailName"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="15dp"
        	android:textSize="@dimen/font4"
        	android:textColor="@color/color4"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	/>
          
          <TextView
        	android:id="@+id/game_tv_detail_gameControl"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginRight="70dp"
        	android:textSize="@dimen/font7"
        	android:textColor="@color/color5"
        	android:text="手柄操控指数 ："
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	/>
          <TextView 
              android:id="@+id/game_tv_detail_gameStartLevel"
              android:layout_width="wrap_content"
              android:textSize="@dimen/font7"
        	  android:textColor="@color/color5"
              android:layout_height="wrap_content"
              android:layout_marginRight="15dp"
        	  android:layout_alignParentRight="true"
        	  android:layout_centerVertical="true"
              />
          <!-- <RatingBar
            android:id="@+id/game_tv_detail_gameStartLevel"
            style="@style/gradeRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:rating="3" /> -->
          
     	</RelativeLayout>
    
    <com.sxhl.market.view.costom.CustomGallery
            android:id="@+id/game_gallery_gameDetailImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
           	android:paddingLeft="30dp"
           	android:paddingRight="30dp"
            android:gravity="center"
            android:spacing="20dp"
           />

        <TextView
            android:id="@+id/game_tv_gameDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.1"
        	android:textSize="@dimen/font7"
        	android:textColor="@color/color5"/>
        
    </LinearLayout>
</ScrollView>