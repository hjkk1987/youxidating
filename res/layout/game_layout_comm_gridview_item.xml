<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/game_iv_gvItemAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/minphoto"
        android:scaleType="fitXY" >
    </ImageView>

    <TextView
        android:id="@+id/game_tv_gvItemGameName"
        style="@style/recommend_bottom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_iv_gvItemAvatar"
        android:layout_alignRight="@+id/game_iv_gvItemAvatar"
        android:layout_below="@+id/game_iv_gvItemAvatar"
        android:layout_marginTop="2dp"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:singleLine="true" >
    </TextView>

</RelativeLayout>