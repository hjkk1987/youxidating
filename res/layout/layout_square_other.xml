<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/square_backgroud" >

        <Button
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/square_six" />

        <Button
            android:id="@+id/imgStrategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_square_one_sel" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/square_bg"
            android:text="@string/square_game_attackstrategy"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />
         <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRelaxPart"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/square_bg"
            android:text="@string/square_fantastic_story"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/imgHotTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_square_four_sel" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/square_bg"
            android:text="@string/square_notice_board"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgSquarePart"
            android:layout_alignParentRight="true"
            android:background="@drawable/square_bg"
            android:text="@string/square_fashion_philosopher"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/imgRelaxPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button3"
            android:layout_alignLeft="@+id/button2"
            android:layout_marginBottom="45dp"
            android:background="@drawable/btn_square_three_sel" />

        <Button
            android:id="@+id/imgSquarePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgHotTopic"
            android:layout_alignLeft="@+id/imgHotTopic"
            android:layout_marginBottom="92dp"
            android:background="@drawable/btn_square_two_sel" />

    </RelativeLayout>

</LinearLayout>