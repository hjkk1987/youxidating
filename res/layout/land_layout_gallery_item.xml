<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/land_layout_gallery_item"
    android:background="@drawable/land_bill_selector" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/land_iv_gallery_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/maxphoto"
        android:layout_margin="6dp"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/land_bill_light"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/land_iv_gallery_newitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/land_bill_selector" />

</FrameLayout>