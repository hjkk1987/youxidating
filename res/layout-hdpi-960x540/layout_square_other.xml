<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/square_backgroud" >

        <Button
            android:id="@+id/imageView1"
            android:layout_width="92dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/square_six" />

        <Button
            android:id="@+id/imgStrategy"
            android:layout_width="200dp"
            android:layout_height="186dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_square_one_sel" />

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgRelaxPart"
            android:layout_marginLeft="14dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_fantastic_story"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/button3"
             android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imgSquarePart"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="62dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_fashion_philosopher"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_game_attackstrategy"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <Button
            android:id="@+id/imgSquarePart"
            android:layout_width="109dp"
            android:layout_height="160dp"
            android:layout_below="@+id/button4"
            android:layout_toLeftOf="@+id/button3"
            android:background="@drawable/btn_square_two_sel" />

        <Button
            android:id="@+id/imgRelaxPart"
            android:layout_width="96dp"
            android:layout_height="207dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/button3"
            android:background="@drawable/btn_square_three_sel" />

        <Button
            android:id="@+id/imgHotTopic"
            android:layout_width="149dp"
            android:layout_height="147dp"
            android:layout_above="@+id/button1"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_square_four_sel" />

        <Button
            android:id="@+id/button1"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imgSquarePart"
            android:background="@drawable/square_bg"
            android:gravity="center"
            android:text="@string/square_notice_board"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

    </RelativeLayout>

</LinearLayout>