<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_head_bg"
    android:gravity="center_vertical" >

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:background="@drawable/common_head_btn_selector"
        android:src="@drawable/common_head_back"
        />

    <TextView
        android:id="@+id/tvHeadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="游戏中心"
        android:textStyle="bold"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#999999"
        android:layout_marginBottom="15dp"
        android:shadowRadius="1"
        android:textColor="#ffffff"
        android:textSize="34sp" />

    <ImageButton
        android:id="@+id/btnHeadRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/common_head_btn_selector"
        android:src="@drawable/common_head_search"
        android:visibility="gone" />
      <ImageButton
        android:id="@+id/btnCommitArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/common_head_btn_selector"
        android:src="@drawable/article_commit"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/lineHeadVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnHeadRight"
        android:visibility="invisible"
        android:background="@drawable/common_head_btn_selector"
        android:src="@drawable/commom_header_vertical_line" />
</RelativeLayout>